# Copy this file to .env.deploy and fill values before running docker-compose
# Set to 'external' or 'internal'. If 'internal', the compose will use the bundled postgresql service.
USE_INTERNAL_DB=false

# Build settings
BUILD_LOCAL_IMAGE=true
IMAGE_NAME=fintecherp:latest

# Secrets
# If using docker secrets, place your secret file at src/main/docker/secrets/db_password.secret
# and ensure the file contains only the DB password. The compose file mounts it as /run/secrets/db_password

# External DB connection (used when USE_INTERNAL_DB=false)
SPRING_DATASOURCE_URL=jdbc:postgresql://185.65.68.120:32768/fintechErp
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgresfintech!
SPRING_LIQUIBASE_URL=${SPRING_DATASOURCE_URL}
SPRING_LIQUIBASE_USER=${SPRING_DATASOURCE_USERNAME}
SPRING_LIQUIBASE_PASSWORD=${SPRING_DATASOURCE_PASSWORD}
