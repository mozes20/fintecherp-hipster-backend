<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Replaces the dokumentum tipus relation with a simple string flag and removes the lookup table.
    -->
    <changeSet id="20251029090000-1" author="copilot">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="szerzodeses_jogviszony_dokumentum" columnName="dokumentum_tipus"/>
            </not>
        </preConditions>
        <addColumn tableName="szerzodeses_jogviszony_dokumentum">
            <column name="dokumentum_tipus" type="varchar(255)"/>
        </addColumn>
    </changeSet>

    <changeSet id="20251029090000-2" author="copilot">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="szerzodeses_jogviszony_dokumentum_template" columnName="dokumentum_tipus"/>
            </not>
        </preConditions>
        <addColumn tableName="szerzodeses_jogviszony_dokumentum_template">
            <column name="dokumentum_tipus" type="varchar(255)"/>
        </addColumn>
    </changeSet>

    <changeSet id="20251029090000-3" author="copilot">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="szerzodeses_jogviszony_dokumentum"/>
                <columnExists tableName="szerzodeses_jogviszony_dokumentum" columnName="dokumentum_tipus_id"/>
            </and>
        </preConditions>
        <sql>
            UPDATE szerzodeses_jogviszony_dokumentum s
            SET dokumentum_tipus = (
                SELECT sd.nev FROM szerzodes_dokumentum_tipus sd WHERE sd.id = s.dokumentum_tipus_id
            )
            WHERE s.dokumentum_tipus_id IS NOT NULL;
        </sql>
        <sql>
            UPDATE szerzodeses_jogviszony_dokumentum
            SET dokumentum_tipus = 'UNKNOWN'
            WHERE dokumentum_tipus IS NULL;
        </sql>
    </changeSet>

    <changeSet id="20251029090000-4" author="copilot">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="szerzodeses_jogviszony_dokumentum_template"/>
                <columnExists tableName="szerzodeses_jogviszony_dokumentum_template" columnName="dokumentum_tipus_id"/>
            </and>
        </preConditions>
        <sql>
            UPDATE szerzodeses_jogviszony_dokumentum_template s
            SET dokumentum_tipus = (
                SELECT sd.nev FROM szerzodes_dokumentum_tipus sd WHERE sd.id = s.dokumentum_tipus_id
            )
            WHERE s.dokumentum_tipus_id IS NOT NULL;
        </sql>
        <sql>
            UPDATE szerzodeses_jogviszony_dokumentum_template
            SET dokumentum_tipus = 'UNKNOWN'
            WHERE dokumentum_tipus IS NULL;
        </sql>
    </changeSet>

    <changeSet id="20251029090000-5" author="copilot">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="szerzodeses_jogviszony_dokumentum" columnName="dokumentum_tipus"/>
        </preConditions>
        <addNotNullConstraint tableName="szerzodeses_jogviszony_dokumentum" columnName="dokumentum_tipus" columnDataType="varchar(255)"/>
    </changeSet>

    <changeSet id="20251029090000-6" author="copilot">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="szerzodeses_jogviszony_dokumentum_template" columnName="dokumentum_tipus"/>
        </preConditions>
        <addNotNullConstraint tableName="szerzodeses_jogviszony_dokumentum_template" columnName="dokumentum_tipus" columnDataType="varchar(255)"/>
    </changeSet>

    <changeSet id="20251029090000-7" author="copilot">
